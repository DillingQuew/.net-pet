@model List<WebApplication1.Models.Book>

@{
    ViewData["Title"] = "Редактирование книги";
}

<h1>@ViewData["Title"]</h1>

<form method="POST" asp-action="Save">
    <div class="form-group">
        <input type="hidden" name="id" value="@(ViewBag.EditedBook?.Id)"/>
        
        <div class="form-group">
            <label for="BookName">Название</label>
            <input type="text" name="BookName" value="@(ViewBag.EditedBook?.BookName)" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="Price">Цена</label>
            <input type="text" name="Price" value="@(ViewBag.EditedBook?.Price)" class="form-control"/>
        </div>  
        <div class="form-group">
            <label for="Category">Жанр</label>
            <input type="text" name="Category" value="@(ViewBag.EditedBook?.Category)" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="Author">Автор</label>
            <input type="text" name="Author" value="@(ViewBag.EditedBook?.Author)" class="form-control"/>
        </div>
        
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-actoin="Cancel" class="btn btn-secondary">Отменить</a>
        </div>
    </div>
</form>