@model List<WebApplication1.Models.Book>

@{
    ViewData["Title"] = "Управление книгами";
}
<h1>@ViewData["Title"]</h1>
<a asp-controller="Book" asp-action="AddPage">Добавить книгу</a>
<table class="table mt-4">
    <thead>
    <tr>
        <th>ID</th>
        <th>Название</th>
        <th>Цена</th>
        <th>Категория</th>
        <th>Автор</th>
        <th>Действие</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Id</td>
            <td>@book.BookName</td>
            <td>@book.Price $</td>
            <td>@book.Category</td>
            <td>@book.Author</td>
            <td>
                <form method="POST" asp-action="Edit">
                    <input type="hidden" name="id" value="@book.Id"/>
                    <button type="submit" class="btn btn-info btn-sm">Выбрать</button>
                </form>

                <form method="POST" asp-action="Delete" class="d-inline">
                    <input type="hidden" name="id" value="@book.Id"/>
                    <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>