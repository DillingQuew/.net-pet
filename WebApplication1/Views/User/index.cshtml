@model List<WebApplication1.Models.User>
@{
    ViewData["Title"] = "Управление пользователями";
}

@functions
{
    public async Task NotifyDataIsEmpty() //разобраться
    {
        <h3>Данные отсутствуют.</h3>
        <a asp-action="Index">Перезагрузить страницу</a>
    }
}

<h1>@ViewData["Title"]</h1>

<form method="POST" asp-action="Save">
    <div class="form-group">
        <input type="hidden" name="id" value="@(ViewBag.SelectedUser?.Id ?? 0)"/>
        
        <div class="form-group">
            <label for="Login">Логин</label>
            <input type="text" name="Login" value="@(ViewBag.SelectedUser?.Login)" class="form-control"/>
        </div>
        
        <div class="form-group">
            <label for="Password">Пароль</label>
            <input type="password" name="Password" value="@(ViewBag.SelectedUser?.Password)" class="form-control"/>
        </div>
        
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-actoin="Reset" class="btn btn-secondary">Сбросить</a>
        </div>
    </div>
</form>

@if (Model == null)
{
    NotifyDataIsEmpty();
    return;
} else if (Model.Count == 0)
{
    NotifyDataIsEmpty();
    return;
}

<table class="table mt-4">
    <thead>
    <tr>
        <th>ID</th>
        <th>Логин</th>
        <th>Пароль</th>
        <th>Действие</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Login</td>
                <td>@user.Password</td>
                <td>
                    <form method="POST" asp-action="Select">
                        <input type="hidden" name="id" value="@user.Id"/>
                        <button type="submit" class="btn btn-info btn-sm">Выбрать</button>
                    </form>

                    <form method="POST" asp-action="Delete" class="d-inline">
                        <input type="hidden" name="id" value="@user.Id"/>
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>